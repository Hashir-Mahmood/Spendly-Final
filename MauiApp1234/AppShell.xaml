<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1234.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1234"
    Shell.FlyoutBehavior="Disabled"
    Title="MauiApp1234">

    <TabBar>
        
        <Tab Title="Dashboard" Icon="dotnet_bot.png">
            <ShellContent Title="Dashboard"
            ContentTemplate="{DataTemplate local:Dashboard}" Route="dashboardPage" />
        </Tab>
        
        <Tab Title="Budgeting" Icon="dotnet_bot.png">
            <ShellContent Title="Budgeting"
            ContentTemplate="{DataTemplate local:Budgeting}" Route="budgetingPage" />
        </Tab>
        
        <Tab Title="Investments" Icon="dotnet_bot.png">
            <ShellContent Title="Investments"
            ContentTemplate="{DataTemplate local:Investing}" Route="investmentsPage" />
        </Tab>
        
        <Tab Title="InfoHub" Icon="dotnet_bot.png">
            <ShellContent Title="InfoHub"
            ContentTemplate="{DataTemplate local:InfoHub1}" Route="infoHubPage" />
        </Tab>
        
    </TabBar>




</Shell>
