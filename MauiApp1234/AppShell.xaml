<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1234.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1234"
    Shell.FlyoutBehavior="Disabled"
    
    Title="MauiApp1234">

    <!-- Define routes first -->
    <ShellContent Route="onboarding" ContentTemplate="{DataTemplate local:onboardingPage}" />
    <!-- Add this before or after your TabBar -->
    <ShellContent Route="loginPage" ContentTemplate="{DataTemplate local:LogInPage1}" />
    <ShellContent ContentTemplate="{DataTemplate local:Dashboard}" Route="dashboard" />
    <ShellContent ContentTemplate="{DataTemplate local:Budgeting}" Route="budgeting" />
    <ShellContent ContentTemplate="{DataTemplate local:Investing}" Route="investments" />
    <ShellContent ContentTemplate="{DataTemplate local:InfoHub1}" Route="infohub" />
    <!-- TabBar that should be visible for main app flow -->
    
</Shell>