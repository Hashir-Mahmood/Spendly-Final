<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1234.Pages.Settings.PasswordResetInstructionsPage"
             Title="PasswordResetInstructionsPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <!-- Fondo con gradiente de violeta a naranja como en otras páginas -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8A4FFF" Offset="0.0" />
            <GradientStop Color="#E88D67" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <Grid RowDefinitions="Auto,*" Padding="20" Grid.Row="2">
        <!-- Logo superior -->
        <StackLayout Grid.Row="0" HorizontalOptions="Center" Margin="0,40,0,0">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Image Source="spendly_icon.png" HeightRequest="30" VerticalOptions="Center" />
                <Label Text="Spendly" TextColor="White" FontSize="32" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0" />
            </StackLayout>
        </StackLayout>

        <!-- Tarjeta principal -->
        <Frame Grid.Row="1" 
               BackgroundColor="White" 
               CornerRadius="12" 
               HasShadow="True" 
               Padding="20" 
               Margin="0,20,0,40">

            <ScrollView>
                <VerticalStackLayout Spacing="20">
                    <!-- title -->
                    <Label Text="How to Reset Your Password" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="#333333" 
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />

                    <!-- intro -->
                    <Label Text="Follow these simple steps to reset your password and regain access to your account." 
                           FontSize="16" 
                           TextColor="#666666" 
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <!-- step 1 -->
                    <Frame BackgroundColor="#F5F7FA" 
                           CornerRadius="12" 
                           HasShadow="False" 
                           Padding="15">
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="0" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#7E57FF"
                                   CornerRadius="20"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Padding="0"
                                   VerticalOptions="Start">
                                <Label Text="1" 
                                       TextColor="White" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Navigate to the Reset Page" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#333333" />
                                <Label Text="Click on the 'Reset Password' button below to navigate to the password reset form." 
                                       FontSize="16" 
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- step 2 -->
                    <Frame BackgroundColor="#F5F7FA" 
                           CornerRadius="12" 
                           HasShadow="False" 
                           Padding="15">
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="0" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#7E57FF"
                                   CornerRadius="20"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Padding="0"
                                   VerticalOptions="Start">
                                <Label Text="2" 
                                       TextColor="White" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Enter Your Information" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#333333" />
                                <Label Text="Enter your email address and Customer ID associated with your account." 
                                       FontSize="16" 
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- step 3 -->
                    <Frame BackgroundColor="#F5F7FA" 
                           CornerRadius="12" 
                           HasShadow="False" 
                           Padding="15">
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="0" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#7E57FF"
                                   CornerRadius="20"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Padding="0"
                                   VerticalOptions="Start">
                                <Label Text="3" 
                                       TextColor="White" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Set Your New Password" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#333333" />
                                <Label Text="Create a new, secure password for your account. Make sure it's at least 8 characters long and includes numbers and special characters." 
                                       FontSize="16" 
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- step 4 -->
                    <Frame BackgroundColor="#F5F7FA" 
                           CornerRadius="12" 
                           HasShadow="False" 
                           Padding="15">
                        <Grid ColumnDefinitions="Auto,*" RowSpacing="0" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#7E57FF"
                                   CornerRadius="20"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   Padding="0"
                                   VerticalOptions="Start">
                                <Label Text="4" 
                                       TextColor="White" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="Complete Reset Process" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       TextColor="#333333" />
                                <Label Text="Click on 'Reset Password' to complete the password reset process." 
                                       FontSize="16" 
                                       TextColor="#666666" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>

                    <!-- Button to go to reset password -->
                    <Button Text="Reset Password" 
                            BackgroundColor="#7E57FF" 
                            TextColor="White" 
                            FontSize="16" 
                            FontAttributes="Bold"
                            CornerRadius="24" 
                            HeightRequest="50" 
                            Margin="0,10,0,10"
                            x:Name="ResetPasswordButton"
                            Clicked="ResetPasswordButton_Clicked" />

                    <!-- Contact Support -->
                    <Label Text="Need help? Contact our support team" 
                           TextColor="#7E57FF" 
                           FontSize="14" 
                           HorizontalOptions="Center"
                           TextDecorations="Underline" 
                           Margin="0,0,0,10">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer x:Name="ContactSupportTap" 
                                                 Tapped="ContactSupportTap_Tapped" />
                        </Label.GestureRecognizers>
                    </Label>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
        <!-- Bottom Navigation -->
        <Grid Grid.Row="3" BackgroundColor="White" HeightRequest="60" ColumnDefinitions="*,*,*,*">
            <!-- return button -->
            <Button Text="←" 
FontSize="20" 
HorizontalOptions="Start" 
WidthRequest="40" 
HeightRequest="40" 
CornerRadius="20" 
BackgroundColor="Transparent" 
TextColor="Black" 
Padding="0" 
BorderWidth="0"
x:Name="ReturnButton"
Clicked="ReturnButton_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>
