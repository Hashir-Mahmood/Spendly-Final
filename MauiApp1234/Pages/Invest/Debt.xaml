<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:local="clr-namespace:MauiApp1234"
             x:Class="MauiApp1234.Debt"
             Title="Debt"
             BackgroundColor="#f4f6f9">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <!-- Header with Icons -->
            <Grid Margin="20,10" ColumnDefinitions="Auto,*,Auto,Auto">
                <Frame Grid.Column="0" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White" HorizontalOptions="CenterAndExpand">
                    <Image Source="ai.png" HeightRequest="20" WidthRequest="20" x:Name="ChatbotIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ChatbotIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Grid Grid.Column="1" />
                <Frame Grid.Column="2" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White">
                    <Image Source="bell.png" HeightRequest="20" WidthRequest="20" x:Name="NotificationsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNotificationsIconTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
                <Frame Grid.Column="3" CornerRadius="20" Padding="10" HasShadow="False" BackgroundColor="White" Margin="10,0,0,0">
                    <Image Source="settings.png" HeightRequest="20" WidthRequest="20" x:Name="SettingsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="SettingsIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <!-- Debt Header -->
            <Label Text="Debt Overview" FontSize="24" FontAttributes="Bold" TextColor="#6200EA" Margin="0,20,0,0"/>
            <Label Text="£130000" FontSize="32" FontAttributes="Bold" TextColor="#6200EA"/>
            <Label Text="-1.8% this month" FontSize="16" TextColor="Green"/>
            <Label Text="Debt distribution" FontSize="20" TextColor="#6200EA" Margin="0,40,0,10"/>

            <!-- Go to Investment Page Button -->
            <Button Text="Go to Investment Page" 
                    BackgroundColor="#6200EA" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="18" 
                    HeightRequest="40" 
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Clicked="InvestmentPageButton_Clicked"/>

            <!-- Chart -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" Padding="10" BorderColor="Transparent" Margin="0,0,0,20" HeightRequest="280">
                <syncfusion:SfCartesianChart x:Name="DebtOverviewChart">
                    <syncfusion:SfCartesianChart.Title Text="Portfolio Performance (Last 6 Months)" FontAttributes="Bold" TextColor="#333333" FontSize="16"/>
                    

                    <syncfusion:SfCartesianChart.XAxes>
                        <syncfusion:CategoryAxis>
                            <syncfusion:CategoryAxis.Title>
                                <syncfusion:ChartAxisTitle Text="Month"/>
                            </syncfusion:CategoryAxis.Title>
                        </syncfusion:CategoryAxis>
                    </syncfusion:SfCartesianChart.XAxes>

                    <syncfusion:SfCartesianChart.YAxes>
                        <syncfusion:NumericalAxis>
                            <syncfusion:NumericalAxis.Title>
                                <syncfusion:ChartAxisTitle Text="Value (£)"/>
                            </syncfusion:NumericalAxis.Title>
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfCartesianChart.YAxes>

                    <syncfusion:SfCartesianChart.Series>
                        <syncfusion:SplineSeries 
                            ItemsSource="{Binding DebtChartData}" 
                            XBindingPath="Month" 
                            YBindingPath="Value"
                            StrokeWidth="3"
                            EnableTooltip="True" />

                        <syncfusion:SplineAreaSeries 
                            ItemsSource="{Binding DebtChartData}" 
                            XBindingPath="Month" 
                            YBindingPath="Value"
                            Fill="#6200EA"
                            Opacity="0.3" />
                    </syncfusion:SfCartesianChart.Series>
                </syncfusion:SfCartesianChart>
            </Frame>

            <!-- Debt Breakdown -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" BorderColor="Transparent" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Debt Breakdown" FontSize="20" FontAttributes="Bold" TextColor="#6200EA" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Credit Cards -->
                    <FlexLayout Direction="Row" Margin="0,0,0,5">
                        <HorizontalStackLayout Margin="0,0,0,5" FlexLayout.Grow="1">
                            <BoxView WidthRequest="10" HeightRequest="10" BackgroundColor="#F01010" CornerRadius="5" Margin="0,0,5,0"/>
                            <Label Text="Credit Cards" FontSize="16"/>
                        </HorizontalStackLayout>
                        <Label Text="£7,450" FontSize="16" FontAttributes="Bold"/>
                    </FlexLayout>

                    <!-- Personal Loans -->
                    <FlexLayout Direction="Row">
                        <HorizontalStackLayout Margin="0,0,0,5" FlexLayout.Grow="1">
                            <BoxView WidthRequest="10" HeightRequest="10" BackgroundColor="#DFC700" CornerRadius="5" Margin="0,0,5,0"/>
                            <Label Text="Personal Loans" FontSize="16"/>
                        </HorizontalStackLayout>
                        <Label Text="£5,250" FontSize="16" FontAttributes="Bold"/>
                    </FlexLayout>

                    <!-- Mortgage -->
                    <FlexLayout Direction="Row">
                        <HorizontalStackLayout Margin="0,0,0,5" FlexLayout.Grow="1">
                            <BoxView WidthRequest="10" HeightRequest="10" BackgroundColor="#4CAF50" CornerRadius="5" Margin="0,0,5,0"/>
                            <Label Text="Mortgage" FontSize="16"/>
                        </HorizontalStackLayout>
                        <Label Text="£6,050" FontSize="16" FontAttributes="Bold"/>
                    </FlexLayout>
                </StackLayout>
            </Frame>

            <!-- Active Loans by Interest Rate -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" BorderColor="Transparent" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Active Loans by Interest Rate" FontSize="20" FontAttributes="Bold" TextColor="#6200EA" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>

                    <!-- Halifax -->
                    <Frame Margin="0,0,0,5" BackgroundColor="#FFE4E4" Padding="10">
                        <FlexLayout Direction="Row">
                            <HorizontalStackLayout FlexLayout.Grow="1">
                                <BoxView WidthRequest="40" HeightRequest="40" BackgroundColor="#F01010" CornerRadius="20"/>
                                <VerticalStackLayout Padding="10,0">
                                    <Label Text="Halifax Credit Card" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="24.9% APR - High Priority" FontSize="12" TextColor="Red"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Text="£4,250" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="Red" Margin="0,0,8,0"/>
                        </FlexLayout>
                    </Frame>

                    <!-- Natwest -->
                    <Frame Margin="0,0,0,5" BackgroundColor="#FFFFC0" Padding="10">
                        <FlexLayout Direction="Row">
                            <HorizontalStackLayout FlexLayout.Grow="1">
                                <BoxView WidthRequest="40" HeightRequest="40" BackgroundColor="#DFC700" CornerRadius="20"/>
                                <VerticalStackLayout Padding="10,0">
                                    <Label Text="Natwest Personal Loan" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="12.5% APR - Medium Priority" FontSize="12" TextColor="#DFC700"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Text="£5,250" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="#DFC700" Margin="0,0,8,0"/>
                        </FlexLayout>
                    </Frame>

                    <!-- Nationwide -->
                    <Frame Margin="0,0,0,5" BackgroundColor="#E0FFE0" Padding="10">
                        <FlexLayout Direction="Row">
                            <HorizontalStackLayout FlexLayout.Grow="1">
                                <BoxView WidthRequest="40" HeightRequest="40" BackgroundColor="#4CAF50" CornerRadius="20"/>
                                <VerticalStackLayout Padding="10,0">
                                    <Label Text="Nationwide Mortgage" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="3.99% APR - Low Priority" FontSize="12" TextColor="#4CAF50"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Text="£6,050" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="#4CAF50" Margin="0,0,8,0"/>
                        </FlexLayout>
                    </Frame>

                    <!-- Barclaycard -->
                    <Frame Margin="0,0,0,5" BackgroundColor="#FFE4E4" Padding="10">
                        <FlexLayout Direction="Row">
                            <HorizontalStackLayout FlexLayout.Grow="1">
                                <BoxView WidthRequest="40" HeightRequest="40" BackgroundColor="#F01010" CornerRadius="20"/>
                                <VerticalStackLayout Padding="10,0">
                                    <Label Text="Barclaycard" FontSize="16" FontAttributes="Bold"/>
                                    <Label Text="21.9% APR - High Priority" FontSize="12" TextColor="Red"/>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <Label Text="£3,200" VerticalTextAlignment="Center" FontSize="16" FontAttributes="Bold" TextColor="Red" Margin="0,0,8,0"/>
                        </FlexLayout>
                    </Frame>
                </StackLayout>
            </Frame>

            <!-- Payment Recommendations -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" BorderColor="Transparent">
                <StackLayout>
                    <Label Text="Payment Recommendations" FontSize="20" FontAttributes="Bold" TextColor="#6200EA" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>
                    <VerticalStackLayout>
                        <Label Text="Make an extra payment on Halifax Credit Card to reduce high interest." FontSize="16"/>
                        <HorizontalStackLayout Margin="0,0,0,10">
                            <Button Text="Pay Now" BackgroundColor="#6200EA" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40" Margin="0,0,10,0"/>
                            <Button Text="Remind Later" BackgroundColor="#FF0000" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40"/>
                        </HorizontalStackLayout>

                        <Label Text="Consider transferring your Barclaycard balance to a 0% interest card." FontSize="16"/>
                        <HorizontalStackLayout Margin="0,0,0,4">
                            <Button Text="Explore Options" BackgroundColor="#6200EA" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40" Margin="0,0,10,0"/>
                            <Button Text="Dismiss" BackgroundColor="#FF0000" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>