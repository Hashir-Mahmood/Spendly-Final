<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:local="clr-namespace:MauiApp1234"
             x:Class="MauiApp1234.Investing"
             Title="Investment"
             BackgroundColor="#f4f6f9">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <!-- Header with Icons -->
            <Grid Grid.Row="0" Margin="20,10" ColumnDefinitions="Auto,*,Auto,Auto">
                <!-- Icon on the left -->
                <Frame Grid.Column="0" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White" HorizontalOptions="CenterAndExpand">
                    <Image Source="ai.png" HeightRequest="20" WidthRequest="20" x:Name="ChatbotIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ChatbotIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Space in the middle (will automatically expand) -->
                <Grid Grid.Column="1" />

                <!-- Notification icon on the right -->
                <Frame Grid.Column="2" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White" >
                    <Image Source="bell.png" HeightRequest="20" WidthRequest="20" x:Name="NotificationsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNotificationsIconTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Settings icon on the right -->
                <Frame Grid.Column="3" CornerRadius="20" Padding="10" HasShadow="False" BackgroundColor="White" Margin="10,0,0,0">
                    <Image Source="settings.png" HeightRequest="20" WidthRequest="20" x:Name="SettingsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="SettingsIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <!-- Portfolio Header -->
            <Label Text="Investment Portfolio" FontSize="24" FontAttributes="Bold" TextColor="#6200EA" Margin="0,20,0,0"/>
            <Label Text="£6200" FontSize="32" FontAttributes="Bold" TextColor="#6200EA"/>
            <Label Text="+4.3% this month" FontSize="16" TextColor="Green"/>
            <Label Text="Portfolio performance" FontSize="20" TextColor="#6200EA" Margin="0,40,0,10"/>

            <!-- Go to Debt Page Button -->
            <Button Text="Go to Debt Page" 
                    BackgroundColor="#6200EA" 
                    TextColor="White" 
                    FontAttributes="Bold" 
                    CornerRadius="18" 
                    HeightRequest="40" 
                    HorizontalOptions="End"
                    Margin="0,0,0,10"
                    Clicked="DebtPageButton_Clicked"/>

            <!-- Syncfusion Chart with Direct Data -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" Padding="10" BorderColor="Transparent" Margin="0,0,0,20" HeightRequest="280">
                <syncfusion:SfCartesianChart x:Name="InvestmentChart">
                    <syncfusion:SfCartesianChart.Title>
                        <Label Text="Portfolio Performance (Last 6 Months)" FontAttributes="Bold" TextColor="#333333" FontSize="16"/>
                    </syncfusion:SfCartesianChart.Title>

                    <syncfusion:SfCartesianChart.XAxes>
                        <syncfusion:CategoryAxis>
                            <syncfusion:CategoryAxis.Title>
                                <syncfusion:ChartAxisTitle Text="Month"/>
                            </syncfusion:CategoryAxis.Title>
                        </syncfusion:CategoryAxis>
                    </syncfusion:SfCartesianChart.XAxes>

                    <syncfusion:SfCartesianChart.YAxes>
                        <syncfusion:NumericalAxis>
                            <syncfusion:NumericalAxis.Title>
                                <syncfusion:ChartAxisTitle Text="Value (£)"/>
                            </syncfusion:NumericalAxis.Title>
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfCartesianChart.YAxes>

                    <syncfusion:SfCartesianChart.Series>
                        <syncfusion:SplineSeries 
                        ItemsSource="{Binding ChartData}" 
                        XBindingPath="Month" 
                            YBindingPath="Value"
                        
                         StrokeWidth="3"
                            EnableTooltip="True" />

                        <syncfusion:SplineAreaSeries 
                            ItemsSource="{Binding ChartData}" 
                            XBindingPath="Month" 
                            YBindingPath="Value"
                            Fill="#6200EA"
                            Opacity="0.3" />
                    </syncfusion:SfCartesianChart.Series>
                </syncfusion:SfCartesianChart>
            </Frame>

            <!-- Top Investments -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" BorderColor="Transparent" Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Top Investments" FontSize="20" FontAttributes="Bold" TextColor="#6200EA" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>

                    <FlexLayout Direction="Row" Margin="0,0,0,5">
                        <HorizontalStackLayout FlexLayout.Grow="1">
                            <Frame CornerRadius="20" Padding="0" HasShadow="False" IsClippedToBounds="True" WidthRequest="40" HeightRequest="40">
                                <Image Source="applelogo.png" Aspect="AspectFill" HeightRequest="40" WidthRequest="40"/>
                            </Frame>
                            <VerticalStackLayout Padding="10,0">
                                <Label Text="Apple Inc." FontSize="16" FontAttributes="Bold"/>
                                <Label Text="AAPL • Tech" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="£3000" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="+5.2%" FontSize="12" TextColor="Green"/>
                        </VerticalStackLayout>
                    </FlexLayout>

                    <FlexLayout Direction="Row" Margin="0,0,0,5">
                        <HorizontalStackLayout FlexLayout.Grow="1">
                            <Frame CornerRadius="20" Padding="0" HasShadow="False" IsClippedToBounds="True" WidthRequest="40" HeightRequest="40">
                                <Image Source="microsoft.png" Aspect="AspectFill" HeightRequest="40" WidthRequest="40"/>
                            </Frame>
                            <VerticalStackLayout Padding="10,0">
                                <Label Text="Microsoft" FontSize="16" FontAttributes="Bold"/>
                                <Label Text="MSFT • Tech" FontSize="12" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="£2400" FontSize="16" FontAttributes="Bold"/>
                            <Label Text="+3.5%" FontSize="12" TextColor="Green"/>
                        </VerticalStackLayout>
                    </FlexLayout>
                </StackLayout>
            </Frame>

            <!-- User Recommendations -->
            <Frame BackgroundColor="#FFFFFF" CornerRadius="20" BorderColor="Transparent">
                <StackLayout>
                    <Label Text="User Recommendations" FontSize="20" FontAttributes="Bold" TextColor="#6200EA" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>

                    <VerticalStackLayout>
                        <Label Text="The user is advised to transfer money to another." FontSize="16"/>
                        <HorizontalStackLayout Margin="0,0,0,4">
                            <Button Text="Confirm" BackgroundColor="#6200EA" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40" Margin="0,0,10,0"/>
                            <Button Text="Cancel" BackgroundColor="#FF0000" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40"/>
                        </HorizontalStackLayout>

                        <Label Text="The user is advised to transfer money to another2." FontSize="16"/>
                        <HorizontalStackLayout Margin="0,0,0,4">
                            <Button Text="Confirm" BackgroundColor="#6200EA" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40" Margin="0,0,10,0"/>
                            <Button Text="Cancel" BackgroundColor="#FF0000" TextColor="White" FontAttributes="Bold" CornerRadius="18" HeightRequest="40"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </StackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>