<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1234.LogInPage3"
             Title="LogInPage3"
             Shell.NavBarIsVisible="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#8A4FFF" Offset="0.0" />
            <GradientStop Color="#E88D67" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>

        <Grid RowDefinitions="Auto,*" Padding="20">
            <!-- Logo superior -->
            <StackLayout Grid.Row="0" HorizontalOptions="Center" Margin="0,40,0,0">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Image Source="spendly_icon.png" HeightRequest="30" VerticalOptions="Center" />
                    <Label Text="Spendly" TextColor="White" FontSize="35" FontAttributes="Bold" VerticalOptions="Center" Margin="10,0,0,0" />
                </StackLayout>
            </StackLayout>

            <!-- Main white space -->
            <Frame Grid.Row="1" 
            BackgroundColor="White" 
            CornerRadius="12" 
            HasShadow="True" 
            Padding="20" 
            Margin="0,20,0,40">

                <VerticalStackLayout Spacing="20">
                    <!-- return button -->
                    <Button Text="â†" 
                     FontSize="20" 
                     HorizontalOptions="Start" 
                     WidthRequest="40" 
                     HeightRequest="40" 
                     CornerRadius="20" 
                     BackgroundColor="Transparent" 
                     TextColor="Black" 
                     Padding="0" 
                     BorderWidth="0"
                     x:Name="ReturnButton"
                     Clicked="ReturnButton_Clicked"/>

                    <!-- Title and subtitle -->
                    <VerticalStackLayout Spacing="10" Margin="0,10,0,20">
                        <Label Text="Forgot Password" 
                        FontSize="32" 
                        FontAttributes="Bold" 
                        TextColor="Black" />

                        <Label Text="Please fill out your email and customer ID below in order to reset your password." 
                        FontSize="16" 
                        TextColor="#666" 
                        LineBreakMode="WordWrap" />
                    </VerticalStackLayout>

                    <!-- Formulary -->
                    <Border StrokeThickness="0" 
                     BackgroundColor="#F5F7FA" 
                     StrokeShape="RoundRectangle 12,12,12,12">
                        <Entry x:Name="EmailEntry"
                        Placeholder="Email" 
                        TextColor="#333" 
                        PlaceholderColor="#999" 
                        Margin="15,5" 
                        BackgroundColor="Transparent" />
                    </Border>

                    <Border StrokeThickness="0" 
                     BackgroundColor="#F5F7FA" 
                     StrokeShape="RoundRectangle 12,12,12,12">
                        <Entry x:Name="CustomerIdEntry"
                        Placeholder="Customer ID" 
                        TextColor="#333" 
                        PlaceholderColor="#999" 
                        Margin="15,5" 
                        BackgroundColor="Transparent" />
                    </Border>

                    <Border StrokeThickness="0" 
                     BackgroundColor="#F5F7FA" 
                     StrokeShape="RoundRectangle 12,12,12,12">
                        <Entry x:Name="NewPasswordEntry"
                        Placeholder="New Password" 
                        IsPassword="True" 
                        TextColor="#333" 
                        PlaceholderColor="#999" 
                        Margin="15,5" 
                        BackgroundColor="Transparent" />
                    </Border>

                    <!-- send button -->
                    <Button Text="Reset Password" 
                     BackgroundColor="#7E57FF" 
                     TextColor="White" 
                     FontSize="16" 
                     CornerRadius="24" 
                     HeightRequest="50" 
                     Margin="0,10,0,0"
                     x:Name="ResetPasswordButton"
                     Clicked="ResetPasswordButton_Clicked"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>

</ContentPage>