<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1234.LogInPage1"
             Title="LogInPage1"
             Shell.NavBarIsVisible="False">

    <!-- Gradient background -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6A3DE8" Offset="0.0" />
            <GradientStop Color="#FF9863" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <StackLayout Padding="20" VerticalOptions="StartAndExpand" Spacing="10">

            <!-- Logo and title -->
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center"
                         Margin="0,20,0,10"
                         Spacing="10">
                <Image Source="spendly_logo.png"
                       HeightRequest="70"
                       WidthRequest="70"
                       VerticalOptions="Center"/>
                <Label Text="Spendly"
                       TextColor="WhiteSmoke"
                       FontSize="35"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
            </StackLayout>

            <!-- Login Form Card -->
            <Frame CornerRadius="20" 
                   BackgroundColor="White" 
                   Margin="0"
                   HasShadow="True"
                   Padding="20">
                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <Label Grid.Row="0"
                        Text="Get Started"
                        FontSize="32"
                        FontAttributes="Bold"
                        Margin="0,0,0,5"/>

                    <!-- Subtitles -->
                    <Label Grid.Row="1"
                        Text="Create an account by using the form below."
                        FontSize="16"
                        TextColor="#6B7280"
                        Margin="0,0,0,15"
                        x:Name="Subtitles"/>

                    <!-- Email -->
                    <Frame Grid.Row="2"
                        BackgroundColor="#F3F4F6"
                        Padding="15,0"
                        HasShadow="False"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="55">
                        <Entry Placeholder="Email"
                               PlaceholderColor="#6B7280"
                               BackgroundColor="Transparent"
                               TextColor="#1F2937"
                               VerticalOptions="Center"
                               x:Name="EmailEntry"/>
                    </Frame>

                    <!-- Password and Toggle Icon -->
                    <Frame Grid.Row="3"
                        BackgroundColor="#F3F4F6"
                        Padding="15,0"
                        HasShadow="False"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="55">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Entry Grid.Column="0"
                                   Placeholder="Password"
                                   PlaceholderColor="#6B7280"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="#1F2937"
                                   VerticalOptions="Center"
                                   x:Name="PasswordEntry"/>
                            <ImageButton Grid.Column="1"
                                         Source="eye_icon.png"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         Aspect="AspectFit"
                                         VerticalOptions="Center"
                                         x:Name="TogglePasswordButton"
                                         Clicked="TogglePasswordButton_Clicked"/>
                        </Grid>
                    </Frame>

                    <!-- First Name -->
                    <Frame Grid.Row="4"
                        BackgroundColor="#F3F4F6"
                        Padding="15,0"
                        HasShadow="False"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="55">
                        <Entry Placeholder="First Name"
                               PlaceholderColor="#6B7280"
                               BackgroundColor="Transparent"
                               TextColor="#1F2937"
                               VerticalOptions="Center"
                               x:Name="FirstNameEntry"/>
                    </Frame>

                    <!-- Last Name -->
                    <Frame Grid.Row="5"
                        BackgroundColor="#F3F4F6"
                        Padding="15,0"
                        HasShadow="False"
                        BorderColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="55">
                        <Entry Placeholder="Last Name"
                               PlaceholderColor="#6B7280"
                               BackgroundColor="Transparent"
                               TextColor="#1F2937"
                               VerticalOptions="Center"
                               x:Name="LastNameEntry"/>
                    </Frame>

                    <!-- Error message -->
                    <Label Grid.Row="6"
                           TextColor="#DC2626"
                           FontSize="14"
                           IsVisible="false"
                           x:Name="ErrorLabel"
                           Margin="5,0,5,5"/>

                    <!-- Create Account -->
                    <Button Grid.Row="7"
                            Text="Create Account"
                            FontSize="16"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#7047EC"
                            CornerRadius="25"
                            HeightRequest="50"
                            Margin="0,10"
                            x:Name="CreateAccount"
                            Clicked="CreateAccount_Clicked"/>

                    <!-- Sign-in link -->
                    <StackLayout Grid.Row="8" 
                                 Orientation="Horizontal" 
                                 HorizontalOptions="Center"
                                 Margin="0,20,0,0">
                        <Label Text="Already have an account? " 
                               TextColor="#6B7280" 
                               VerticalOptions="Center"/>
                        <Label Text="Sign in here" 
                               TextColor="#7047EC" 
                               FontAttributes="Bold" 
                               VerticalOptions="Center"
                               x:Name="StartSession">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="StartSession_Tapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <!-- Divider -->
                    <Label Grid.Row="9"
                           Text="Or sign up with"
                           HorizontalOptions="Center"
                           TextColor="#6B7280"
                           Margin="0,5"/>

                    <!-- Google Button -->
                    <Frame Grid.Row="10"
                           BorderColor="#E5E7EB"
                           BackgroundColor="White"
                           HasShadow="False"
                           CornerRadius="25"
                           HeightRequest="50"
                           Padding="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0"
                                   Source="google.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="Continue with Google"
                                   TextColor="Black"
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   HorizontalOptions="Start"/>
                        </Grid>
                    </Frame>
                </Grid>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
