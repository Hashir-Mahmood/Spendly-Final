<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1234.onboardingPage"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto"
          Padding="20">

        <!-- Carousel View for Onboarding Pages -->
        <CarouselView x:Name="onboardingCarousel" 
                      Grid.Row="0" 
                      HorizontalOptions="Fill"
                      VerticalOptions="Fill"
                      CurrentItemChanged="OnCarouselItemChanged">

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="24" Padding="20">

                        <!-- Onboarding Image -->
                        <Image x:Name="OnboardingImage"
                               Source="{Binding ImageSource}"
                               HeightRequest="200"
                               HorizontalOptions="Center"
                               Aspect="AspectFit" />

                        <!-- Title and Description -->
                        <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                            <Label Text="{Binding Title}" 
                                   TextColor="#1F2937" 
                                   FontSize="32" 
                                   FontAttributes="Bold" 
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center" />

                            <Label Text="{Binding Description}" 
                                   TextColor="#4B5563" 
                                   FontSize="18" 
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center" />

                            <!-- Pagination Dots -->

                            <HorizontalStackLayout x:Name="IndicatorsLayout"
                       HorizontalOptions="Center"
                       Spacing="5"
                       Margin="0,20,0,0"
                       BindableLayout.ItemsSource="{Binding IndicatorStates}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <BoxView WidthRequest="{Binding Width}"
                     HeightRequest="6"
                     Color="{Binding Color}"
                     CornerRadius="3" />
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <!-- Bottom Buttons -->
        <VerticalStackLayout Grid.Row="1" Spacing="15" Margin="0,0,0,20">
            <Button x:Name="NextButton" 
                    Text="Next" 
                    BackgroundColor="#1F2937" 
                    TextColor="White" 
                    FontSize="16"
                    HeightRequest="50"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    Clicked="OnNextButtonClicked" />

            <Button x:Name="SkipButton"
                    Text="Skip" 
                    BackgroundColor="Transparent" 
                    TextColor="#1F2937" 
                    FontSize="16"
                    HeightRequest="40"
                    BorderColor="Transparent"
                    HorizontalOptions="Fill"
                    Clicked="OnSkipButtonClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
