<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1234.InfoHub1"
             Title="InfoHub1">

    <ScrollView BackgroundColor="#f4f6f9">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header with Icons -->
            <Grid Grid.Row="0" Margin="20,10" ColumnDefinitions="Auto,*,Auto,Auto">
                <!-- Icon on the left -->
                <Frame Grid.Column="0" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White" HorizontalOptions="CenterAndExpand">
                    <Image Source="ai.png" HeightRequest="20" WidthRequest="20" x:Name="ChatbotIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ChatbotIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Space in the middle (will automatically expand) -->
                <Grid Grid.Column="1" />

                <!-- Notification icon on the right -->
                <Frame Grid.Column="2" CornerRadius="24" Padding="10" HasShadow="False" BackgroundColor="White" >
                    <Image Source="bell.png" HeightRequest="20" WidthRequest="20" x:Name="NotificationsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNotificationsIconTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Settings icon on the right -->
                <Frame Grid.Column="3" CornerRadius="20" Padding="10" HasShadow="False" BackgroundColor="White" Margin="10,0,0,0">
                    <Image Source="settings.png" HeightRequest="20" WidthRequest="20" x:Name="SettingsIcon"/>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="SettingsIcon_Tapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <!-- Header Section -->
            <Grid Grid.Row="0" BackgroundColor="#6366f1" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Icons Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Image Grid.Column="0" 
                    Source="profile_icon.png"
                    HorizontalOptions="Start"
                    HeightRequest="24"
                    WidthRequest="24" />

                    <Image Grid.Column="1" 
                    Source="settings_icon.png"
                    HorizontalOptions="End"
                    HeightRequest="24"
                    WidthRequest="24" />
                </Grid>

                <!-- Title -->
                <Label Grid.Row="1"
                Text="InfoHub"
                TextColor="White"
                FontSize="32"
                FontAttributes="Bold"
                Margin="0,10,0,5" />

                <!-- Subtitle -->
                <Label Grid.Row="2"
                Text="Discover insights and learn something new"
                TextColor="White"
                FontSize="16"
                Margin="0,0,0,15" />

                <!-- Buttons -->
                <StackLayout Grid.Row="3" Orientation="Horizontal" Spacing="10">
                    <Button Text="Article preferences"
                     BackgroundColor="#7986CB"
                     TextColor="White"
                     CornerRadius="20"
                     Padding="15,10"
                     HeightRequest="40" 
                     x:Name="Category" Clicked="Category_Clicked"/>

                    <Button Text="Retake Quiz"
                     BackgroundColor="#7986CB"
                     TextColor="White"
                     CornerRadius="20"
                     Padding="15,10"
                     HeightRequest="40" 
                     x:Name="Quiz" Clicked="Quiz_Clicked"/>

                    <Button Text="Sign Out"
                     BackgroundColor="#7986CB"
                     TextColor="White"
                     CornerRadius="20"
                     Padding="15,10"
                     HeightRequest="40" 
                     x:Name="SignOut" Clicked="SignOut_Clicked"/>
                </StackLayout>
            </Grid>

            <!-- Content Section -->
            <ScrollView Grid.Row="1">
                <StackLayout Padding="20,10">
                    <!-- Featured Articles Section -->
                    <Label Text="Featured Articles"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10" />

                    <!-- CarouselView for Articles -->
                    <CarouselView HeightRequest="200" 
                              PeekAreaInsets="10"
                              Margin="0,10"
                              ItemsSource="{Binding FeaturedArticles}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="LightGray"
                                   CornerRadius="10"
                                   HasShadow="True"
                                   Margin="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <StackLayout Grid.Row="0">
                                        <Label 
                                           Text="{Binding Title}"
                                           VerticalOptions="Center"
                                           FontSize="20"
                                           FontAttributes="Bold" />
                                            <Image Source="article_cover1.png" 
                                                HeightRequest="100" 
                                                WidthRequest="200" />
                                        </StackLayout>
                                        <StackLayout Grid.Row="1" 
                                                 Orientation="Horizontal"
                                                 Spacing="5">
                                            <Image Source="clock_icon.png" 
                                               HeightRequest="16" 
                                               WidthRequest="16" />
                                            <Label Text="{Binding ReadTime}" 
                                               FontSize="14"
                                               TextColor="Gray"
                                               VerticalOptions="Center" />
                                        </StackLayout>
                                    </Grid>

                                    <Frame.GestureRecognizers>
                                        
                                    </Frame.GestureRecognizers>
                                </Frame>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!-- Latest Videos Section -->
                    <Label Text="Latest Videos"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Margin="0,20,0,10" />

                    <!-- CollectionView for Videos -->
                    <CollectionView HeightRequest="300"
                                ItemsSource="{Binding LatestVideos}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Video Thumbnail -->
                                    <Frame Grid.Column="0"
                                       BackgroundColor="LightGray"
                                       HeightRequest="100"
                                       WidthRequest="120"
                                       CornerRadius="5"
                                       Padding="0">
                                        <Image Source="{Binding ThumbnailUrl}" Aspect="AspectFill" />
                                    </Frame>

                                    <!-- Video Info -->
                                    <StackLayout Grid.Column="1" Padding="10,0">
                                        <Label Text="{Binding Title}"
                                           FontAttributes="Bold"
                                           FontSize="16"
                                           LineBreakMode="WordWrap" />

                                        <Label Text="{Binding Description}"
                                           TextColor="Gray"
                                           FontSize="14"
                                           Margin="0,5,0,5" />

                                        <StackLayout Orientation="Horizontal" Spacing="5">
                                            <Image Source="eye_icon.png" HeightRequest="16" WidthRequest="16" />
                                            <Label Text="{Binding ViewCount}" FontSize="14" TextColor="Gray" />
                                        </StackLayout>
                                    </StackLayout>

                                    <Grid.GestureRecognizers>
                                        
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </Grid>
        </ScrollView>
</ContentPage>